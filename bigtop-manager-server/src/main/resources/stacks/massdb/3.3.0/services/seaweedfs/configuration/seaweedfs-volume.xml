<configuration>
    <property>
        <name>dir</name>
        <display-name>Seaweedfs Volume 数据目录</display-name>
        <value>/data/seaweedfs/volume-data</value>
        <description />
    </property>
    <property>
        <name>port</name>
        <value>9340</value>
        <display-name>Volume 服务端口</display-name>
        <description  />
    </property>
    <property>
        <name>dataCenter</name>
        <value>mycenter</value>
        <display-name>当前 Volume 服务的数据中心名称</display-name>
        <description />
    </property>
    <property>
        <name>rack</name>
        <value>myrack</value>
        <display-name>当前 Volume 服务的机架名称</display-name>
        <description />
    </property>
    <property>
        <name>max</name>
        <value>0</value>
        <display-name>Volume 服务的最大 volume 数</display-name>
        <description>Volume 服务器上最大 volume 数。如果设置为零，则将自动配置为可用磁盘空间除以卷大小。</description>
    </property>
    <property>
        <name>index</name>
        <value>leveldbLarge</value>
        <display-name>Volume 服务的索引方式</display-name>
        <description>配置 Volume Server 存储和检索文件元数据（例如文件名、偏移量、大小等）的索引方式，不同的模式会在内存使用和性能之间进行权衡。</description>
    </property>
    <property>
        <name>concurrentDownloadLimitMB</name>
        <value>256</value>
        <display-name>Volume 服务限制总并发下载大小（MB）</display-name>
        <description />
    </property>
    <property>
        <name>concurrentUploadLimitMB</name>
        <value>256</value>
        <display-name>Volume 服务限制总并发上传大小（MB）</display-name>
        <description />
    </property>
</configuration>