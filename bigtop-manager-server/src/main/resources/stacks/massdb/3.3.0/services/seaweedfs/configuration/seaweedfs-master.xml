<configuration>
    <property>
        <name>mdir</name>
        <display-name>Seaweedfs Master 数据目录</display-name>
        <value>/data/seaweedfs/master-data</value>
        <description />
    </property>
    <property>
        <name>port</name>
        <value>9333</value>
        <display-name>Master 服务端口</display-name>
        <description  />
    </property>
    <property>
        <name>metricsPort</name>
        <value>9380</value>
        <display-name>Master metrics 端口</display-name>
        <description>Master 的指标监听端口。</description>
    </property>
    <property>
        <name>volumePreallocate</name>
        <value>true</value>
        <display-name>是否预先分配 Volume（数据卷）的磁盘空间</display-name>
        <description />
    </property>
    <property>
        <name>volumeSizeLimitMB</name>
        <value>30000</value>
        <display-name>单个 Volume（数据卷）的最大大小限制（MB）</display-name>
        <description />
    </property>
    <property>
        <name>defaultReplication</name>
        <value>001</value>
        <display-name>Seaweedfs 的默认复制策略</display-name>
        <description />
    </property>
</configuration>