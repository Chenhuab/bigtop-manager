<metainfo>
    <service>
        <name>seaweedfs</name>
        <display-name>Seaweedfs</display-name>
        <desc>
            Seaweedfs是一个简单，高扩展性的分布式文件系统，它的两个目标分别是：存储数十亿级的文件，快速响应文件。
        </desc>
        <version>3.84</version>
        <user>seaweedfs</user>
        <license>Apache-2.0</license>

        <components>
            <component>
                <name>seaweedfs_master</name>
                <display-name>Seaweedfs Master</display-name>
                <category>server</category>
                <cardinality>1+</cardinality>
            </component>

            <component>
                <name>seaweedfs_volume</name>
                <display-name>Seaweedfs Volume</display-name>
                <category>server</category>
                <cardinality>1+</cardinality>
            </component>

            <component>
                <name>seaweedfs_filer</name>
                <display-name>Seaweedfs Filer</display-name>
                <category>server</category>
                <cardinality>1+</cardinality>
            </component>
        </components>

        <package-specifics>
            <package-specific>
                <architectures>
                    <arch>x86_64</arch>
                </architectures>
                <packages>
                    <package>
                        <name>seaweedfs-amd64.tar.gz</name>
                        <checksum>SHA-256:95d7ea87353458e8f8313b19b5b8d80c91ff1e2822dd9a6dd712efc694e2d205</checksum>
                    </package>
                </packages>
            </package-specific>
            <package-specific>
                <architectures>
                    <arch>aarch64</arch>
                </architectures>
                <packages>
                    <package>
                        <name>seaweedfs-arm64.tar.gz</name>
                        <checksum>SHA-256:4faa04b92a98769853926d3d80e727a00e057e51eb2aa07b7cf362184134287b</checksum>
                    </package>
                </packages>
            </package-specific>
        </package-specifics>

        <required-services>
            <service>cassandra</service>
        </required-services>

    </service>
</metainfo>