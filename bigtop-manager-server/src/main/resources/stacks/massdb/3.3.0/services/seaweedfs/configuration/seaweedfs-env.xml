<configuration>
    <property>
        <name>seaweedfs_pid_dir</name>
        <display-name>Seaweedfs PID 目录</display-name>
        <value>/var/run/seaweedfs</value>
        <description />
    </property>
    <property>
        <name>seaweedfs_log_dir</name>
        <display-name>Seaweedfs 日志目录</display-name>
        <value>/var/log/Seaweedfs</value>
        <description />
    </property>
    <property>
        <name>master_peers</name>
        <value>0.0.0.0:9333</value>
        <display-name>Master 服务地址</display-name>
        <description>
            Master 节点以逗号分隔的ip:port列表，例如：1.1.1.1:9333,1.1.1.2:9333,1.1.1.3:9333</description>
    </property>
    <property>
        <name>seaweedfs_master_start_command</name>
        <value />
        <display-name>Seaweedfs Master 启动命令自定义参数</display-name>
        <description />
    </property>
    <property>
        <name>seaweedfs_volume_start_command</name>
        <value />
        <display-name>Seaweedfs Volume 启动命令自定义参数</display-name>
        <description />
    </property>
    <property>
        <name>seaweedfs_filer_start_command</name>
        <value />
        <display-name>Seaweedfs Filer 启动命令自定义参数</display-name>
        <description />
    </property>
</configuration>